<?xml version="1.0" encoding="utf-8" ?>

<Defs>

	<HediffDef ParentName="OsmosisInjurlyBase">
		<defName>Osmosis_H3</defName>
		<label>致命的な浸透</label>
		<comps>
			<li Class="HediffCompProperties_GiveHediff">
				<hediffDef>ExistanceFusion_wound</hediffDef>
				<skipIfAlreadyExists>true</skipIfAlreadyExists>
			</li>
		</comps>
	</HediffDef>

	<HediffDef>
		<defName>ExistanceFusion_wound</defName>
		<label>実在性崩壊</label>
		<description>魂はすでに霧散している。（内部的には意識の最大値を０にすることにより死亡させているため、場合によっては効かないこともある）</description>
		<defaultLabelColor>(0.5, 0.5, 0.5)</defaultLabelColor>
		<displayWound>false</displayWound>
		<hediffClass>HediffWithComps</hediffClass>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<labelNounPretty>{0}の{1}</labelNounPretty>

		<comps>
			<li Class="HE_AntiReality.HediffCompProperties_forceDeath">
				<exceptionDefs>
					<li>
						<hediffDef>AR_Resistance</hediffDef>
						<traitDef MayRequire="HighElixir.DRClothes">AR_Traits1</traitDef>
					</li>
					<li>
						<traitDef>AR_Traits1</traitDef>
					</li>
				</exceptionDefs>
			</li>
		</comps>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<!-- 意識が０になると死ぬ-->
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
</HediffDef>


</Defs>