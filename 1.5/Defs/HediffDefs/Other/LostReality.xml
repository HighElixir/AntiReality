<?xml version="1.0" encoding="utf-8"?>

<Defs>

	<HediffDef>
		<defName>LostOfReality</defName>
		<label>現実性喪失</label>
		<description>だんだんと存在が薄れていく</description>
		<makesSickThought>true</makesSickThought>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
		<maxSeverity>1</maxSeverity>
		<initialSeverity>0.2</initialSeverity>
		<comps>
			<li Class="HE_AntiReality.HediffCompProperties_LostofReality">
				<severityPerDay>-2</severityPerDay>
			</li>
			<li Class="HE_AntiReality.HediffCompProperties_GiveThoughtToWitnesses">
				<!-- 死亡した際に目撃者にデバフを与える -->
				<giveThoughtDef>WitnessedLostOfRealityDeath</giveThoughtDef>
				<radius>22</radius>
				<isWallThrough>false</isWallThrough>
				<pattern>PawnDaed</pattern>
			</li>
		</comps>

		<stages>
			<li>
				<label>影響なし</label>
			</li>

			<li>
				<label>初期</label>
				<minSeverity>0.2</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.90</postFactor>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<postFactor>0.90</postFactor>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<!--Consciousnes：意識-->
						<postFactor>0.90</postFactor>
					</li>
				</capMods>
			</li>

			<li>
				<label>中期</label>
				<minSeverity>0.40</minSeverity>
				<vomitMtbDays>5</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.8</postFactor>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<postFactor>0.65</postFactor>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<postFactor>0.7</postFactor>
					</li>
				</capMods>
			</li>

			<li>
				<label>後期</label>
				<minSeverity>0.60</minSeverity>
				<vomitMtbDays>1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.64</postFactor>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<postFactor>0.3</postFactor>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<postFactor>0.5</postFactor>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>1</mtbDays>
					</li>
				</mentalStateGivers>
				<forgetMemoryThoughtMtbDays>0.8</forgetMemoryThoughtMtbDays>
				<pctConditionalThoughtsNullified>0.2</pctConditionalThoughtsNullified>
			</li>

			<li>
				<label>末期</label>
				<minSeverity>0.80</minSeverity>
				<vomitMtbDays>0.5</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.10</setMax>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>5</mtbDays>
					</li>
				</mentalStateGivers>
				<forgetMemoryThoughtMtbDays>1.0</forgetMemoryThoughtMtbDays>
				<pctConditionalThoughtsNullified>0.7</pctConditionalThoughtsNullified>
			</li>
			<li>
				<label>消失</label>
				<minSeverity>1</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
</Defs>