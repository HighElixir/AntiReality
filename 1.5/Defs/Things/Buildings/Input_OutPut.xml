<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BuildingBase">
		<defName>AR_ResourceConverter</defName>
		<label>コア開封機</label>
		<description>フィクションコアを安全に開封し、様々な機械の動力として利用できる。</description>
		<thingClass>Building_Storage</thingClass>
		<graphicData>
			<texPath>Things/Building/ResourceConverter</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<comps>
			<li Class="PipeSystem.CompProperties_ConvertThingToResource">
				<pipeNet>AR_FictionPipeSystem</pipeNet>
				<!-- ThingDef to take -->
				<thing>Fiction_Core</thing>
				<!-- 1 removed is 1*X added in the net -->
				<ratio>100</ratio>
			</li>
		</comps>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<fixedStorageSettings>
				<filter>
					<disallowNotEverStorable>true</disallowNotEverStorable>
					<thingDefs>
						<li>Fiction_Core</li>
					</thingDefs>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Important</priority>
				<filter>
					<disallowNotEverStorable>true</disallowNotEverStorable>
					<thingDefs>
						<li>Fiction_Core</li>
					</thingDefs>
				</filter>
			</defaultStorageSettings>
		</building>
		<statBases>
			<MaxHitPoints>20000</MaxHitPoints>
			<WorkToBuild>400</WorkToBuild>
			<Flammability>0</Flammability>
		</statBases>
		<costList>
			<Displacement_Plasteel>45</Displacement_Plasteel>
			<ComponentSpacer>1</ComponentSpacer>
		</costList>
		<inspectorTabs>
			<li>ITab_Storage</li>
		</inspectorTabs>
		<surfaceType>Item</surfaceType>
		<researchPrerequisites>
			<li>Research_Displacement_Plasteel</li>
		</researchPrerequisites>
		<designationCategory>AR_PipeNetworks</designationCategory>
		<constructionSkillPrerequisite>4</constructionSkillPrerequisite>
	</ThingDef>
	<ThingDef ParentName="BuildingBase">
		<defName>AR_ResourceConverter_O</defName>
		<label>コア封入機</label>
		<description>FEを密封容器に注入する。取扱注意。</description>
		<thingClass>Building_Storage</thingClass>
		<graphicData>
			<texPath>Things/Building/ResourceConverter_O</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<comps>
			<li Class="PipeSystem.CompProperties_ConvertResourceToThing">
				<pipeNet>AR_FictionPipeSystem</pipeNet>
				<!-- ThingDef to take -->
				<thing>Fiction_Core</thing>
				<!-- 1 removed is 1*X added in the net -->
				<ratio>100</ratio>
				<maxOutputStackSize>10</maxOutputStackSize>
			</li>
		</comps>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<fixedStorageSettings>
				<filter>
					<disallowNotEverStorable>true</disallowNotEverStorable>
					<thingDefs>
						<li>Fiction_Core</li>
					</thingDefs>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Important</priority>
				<filter>
					<disallowNotEverStorable>true</disallowNotEverStorable>
					<thingDefs>
						<li>Fiction_Core</li>
					</thingDefs>
				</filter>
			</defaultStorageSettings>
		</building>
		<statBases>
			<MaxHitPoints>20000</MaxHitPoints>
			<WorkToBuild>400</WorkToBuild>
			<Flammability>0</Flammability>
		</statBases>
		<costList>
			<Displacement_Plasteel>45</Displacement_Plasteel>
			<ComponentSpacer>1</ComponentSpacer>
		</costList>
		<inspectorTabs>
			<li>ITab_Storage</li>
		</inspectorTabs>
		<surfaceType>Item</surfaceType>
		<researchPrerequisites>
			<li>Research_Displacement_Plasteel</li>
		</researchPrerequisites>
		<designationCategory>AR_PipeNetworks</designationCategory>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
	</ThingDef>
</Defs>